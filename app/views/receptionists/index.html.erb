<!-- receptionist index page - display all patients in a table -->
<div class="receptionist-dashboard">
  <h1>All Patients</h1>

  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date of Birth</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.first_name %></td>
          <td><%= patient.last_name %></td>
          <td><%= patient.dob %></td>
          <td><%= patient.phone %></td>
          <td><%= patient.address %></td>
          <td>
            <%= link_to 'Edit', edit_receptionist_path(patient), class: 'btn' %> |
            <%= link_to 'Delete', receptionist_path(patient), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Register New Patient', new_receptionist_path, class: 'btn' %>
</div>
